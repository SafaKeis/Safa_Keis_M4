<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Safa_Keis_M4.BmiCal"
             Title="BmiCal">


    <Grid RowDefinitions="Auto,Auto,Auto,Auto, Auto"
          ColumnDefinitions = "*, *"
          Margin = "20"
          RowSpacing= "15"
          ColumnSpacing="20">

        <Label Text="BMI Calculator"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontSize="Large"
                TextColor="Black"/>
        <!--MALE-->
        <Frame Grid.Row="1"
               Grid.Column="0"
               Padding="20"
               CornerRadius="15"
               HasShadow="True"
               BorderColor="#0a0e29"
               x:Name="FrameMale">

            <VerticalStackLayout Spacing="10">

                <Image Source="male.png" HeightRequest="100"/>
                <Label Text="Male"
                        HorizontalOptions="Center"
                        FontSize="Body"/>

            </VerticalStackLayout>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer x:Name="TapMale" Tapped="TapMale_Tapped"/>
            </Frame.GestureRecognizers>

        </Frame>

        <!--Female-->
        <Frame Grid.Row="1"
             Grid.Column="1"
             Padding="20"
             CornerRadius="15"
             HasShadow="True"
             BorderColor="#fdfdfd"
             x:Name="FrameFemale">

            <VerticalStackLayout Spacing="10">

                <Image Source="female.png" HeightRequest="100"/>
                <Label Text="Female"
                       HorizontalOptions="Center"
                       FontSize="Body"/>

            </VerticalStackLayout>

            <Frame.GestureRecognizers>
                <TapGestureRecognizer x:Name="TapFemale" Tapped="TapFemale_Tapped"/>
            </Frame.GestureRecognizers>

        </Frame>
        
        <!--BMI-->
        <!--Height-->
        <Frame Grid.Row="2"
               Grid.ColumnSpan="2"
               >
            
            <VerticalStackLayout Spacing="10">
                <Label Text="Height (inch)" HorizontalOptions="Center" FontSize="Medium"/>
                  <Slider ThumbColor="DarkBlue" 
                    x:Name="SliderHeight"
                    Minimum="0"
                    Maximum="100"
                    Value="50"/>
            <!--changes the nnumber using label-->
                <Label HorizontalOptions="Center" 
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Text="{Binding Source={x:Reference SliderHeight}, Path=Value, 
                   StringFormat='{0:f0}'}"
                   x:Name="LblHeight"/>
                
            </VerticalStackLayout>
        </Frame>

        <!--Weight -->
        <Frame Grid.Row="3"
               Grid.ColumnSpan="2">
            <VerticalStackLayout>
                <Label Text="Weight (lbs)" HorizontalOptions="Center" FontSize="Medium"/>
                <Slider ThumbColor="DarkBlue" 
                    x:Name="SliderWeight"
                    Minimum="90"
                    Maximum="300"
                    Value="90"/>
                <!--changes the nnumber using label-->
                <Label HorizontalOptions="Center" 
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Text="{Binding Source={x:Reference SliderWeight}, Path=Value, 
                    StringFormat='{0:f0}'}"
                    x:Name="LblWeight"/>

            </VerticalStackLayout>



        </Frame>
                    
        <Button 
                FontSize="Medium"
                Padding="20"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                CornerRadius="20"
                Text="Calcuate your BMI"
                x:Name="BtnCalculateBMI"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                BackgroundColor="Black"
                Clicked="BtnCalculateBMI_Clicked"/>
      

    </Grid>

    







</ContentPage>
